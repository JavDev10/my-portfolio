---
import Layout from '../layouts/Layout.astro';
import AboutContent from '../components/AboutContent.astro';
import Footer from '../components/Footer.astro';
---
<Layout
	title="Sobre Mí - Javier Camaño Torres"
	description="Conoce más sobre Javier Camaño Torres, Ingeniero en Informática apasionado por la tecnología, desarrollo backend y automatización de procesos."
	image="/img/banner-about-me.webp"
>
	<div class="portfolio-container">
		<!-- Header Module (Left Sidebar) -->
		<header class="header-module">
			<div class="header-content">
				<div class="profile-section">
					<div >
						<img class="profile-photo" src="img/perfil-img.jpg" alt="Foto de perfil de Javier Camaño Torres">
					</div>
				</div>
				<nav class="navigation">
					<a class="nav-button" href="/">Curriculum</a>
					<a class="nav-button" href="/sobre-mi">Sobre mí</a>
					<a class="nav-button" href="/proyectos">Proyectos</a>
					<a class="nav-button" href="/blog">Blog</a>
				</nav>
			</div>
			
			<!-- Mobile Header Content -->
			<div class="mobile-header-content">
				<div class="mobile-profile-section">
					<div >
						<img class="profile-photo" src="img/perfil-img.jpg" alt="">
					</div>
					<h2 class="mobile-welcome">Bienvenid@!</h2>
				</div>
				<button class="mobile-menu-toggle" id="mobile-menu-toggle">
					<span class="hamburger-line"></span>
					<span class="hamburger-line"></span>
					<span class="hamburger-line"></span>
				</button>
			</div>
			
			<!-- Mobile Navigation Menu -->
			<nav class="mobile-navigation" id="mobile-navigation">
				<a class="nav-button" href="/">Curriculum</a>
				<a class="nav-button" href="/sobre-mi">Sobre mí</a>
				<a class="nav-button" href="/proyectos">Proyectos</a>
				<a class="nav-button" href="/blog">Blog</a>
			</nav>
		</header>

		<!-- Body Module (Main Content) -->
		<main class="body-module">
			
			<AboutContent />
			
		</main>
		<!-- Footer Module -->
		<Footer />
	</div>
 <script is:inline src="/scripts/navigation.js"></script>
</Layout>