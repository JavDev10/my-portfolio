---
import Layout from "../layouts/Layout.astro";
import CurriculumContent from "../components/CurriculumContent.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
---

<Layout
	title="Javier Camaño Torres - Portafolio | Currículum"
	description="Conoce mi experiencia como Ingeniero en Informática. Desarrollo backend, administración de sistemas y automatización de procesos con Laravel, Python y Docker."
	image="/img/imagen-perfil.webp"
>
	<div class="portfolio-container">
		<!-- Header Module (Left Sidebar) -->
		<Header />

		<!-- Body Module (Main Content) -->
		<main class="body-module" transition:animate="fade">
			<div class="body-content">
				<CurriculumContent />
			</div>
		</main>
		<!-- Footer Module -->
		<Footer />
	</div>

	<script is:inline src="/scripts/navigation.js"></script>
</Layout>
