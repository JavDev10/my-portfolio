		<script>
			document.addEventListener("astro:page-load", () => {
				const searchInput = document.getElementById("search-input");
				const postsContainer = document.getElementById(
					"blog-posts-container",
				);

				if (!searchInput || !postsContainer) return;

				const posts = Array.from(
					postsContainer.querySelectorAll(".blog-post"),
				);

				searchInput.addEventListener("input", (e) => {
					const searchTerm = (e.target as HTMLInputElement).value
						.toLowerCase()
						.trim();
					const searchWords = searchTerm
						.split(/\s+/)
						.filter((word) => word.length > 0);

					posts.forEach((post) => {
						const titleElement = post.querySelector("h3");
						if (!titleElement) return;

						const title =
							titleElement.textContent?.toLowerCase() || "";
						const matches = searchWords.every((word) =>
							title.includes(word),
						);
						const shouldShow = matches || searchTerm === "";

						if (shouldShow) {
							// Show post
							post.classList.remove("hidden");
							// Use requestAnimationFrame to ensure the display change is registered before fading in
							requestAnimationFrame(() => {
								post.classList.remove("fading");
							});
						} else {
							// Hide post
							post.classList.add("fading");
							// Wait for transition to finish before setting display: none
							setTimeout(() => {
								if (post.classList.contains("fading")) {
									post.classList.add("hidden");
								}
							}, 400); // Matches CSS transition duration
						}
					});
				});
			});
		</script>
