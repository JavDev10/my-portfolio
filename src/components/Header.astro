---
const currentPath = Astro.url.pathname === '/' ? '/' : Astro.url.pathname.replace(/\/$/, '');
---

<header class="header-module">
    <div class="header-content">
        <div class="profile-section">
            <div >
                <img class="profile-photo" src="/img/imagen-perfil.webp" alt="Foto de perfil de Javier Camaño Torres" loading="eager">
            </div>
        </div>
        <nav class="navigation">
            <a class={`nav-button ${currentPath === '/' ? 'active' : ''}`} href="/">Curriculum</a>
            <a class={`nav-button ${currentPath === '/sobre-mi' ? 'active' : ''}`} href="/sobre-mi">Sobre mí</a>
            <a class={`nav-button ${currentPath === '/proyectos' ? 'active' : ''}`} href="/proyectos">Proyectos</a>
            <a class={`nav-button ${currentPath === '/blog' ? 'active' : ''}`} href="/blog">Blog</a>
        </nav>
    </div>

    <!-- Mobile Header Content -->
    <div class="mobile-header-content">
        <div class="mobile-profile-section">
            <div >
                <img class="profile-photo" src="/img/imagen-perfil.webp" alt="Foto de perfil de Javier Camaño Torres" loading="eager">
            </div>
            <h2 class="mobile-welcome">Bienvenid@!</h2>
        </div>
        <button class="mobile-menu-toggle" id="mobile-menu-toggle">
            <span class="hamburger-line"></span>
            <span class="hamburger-line"></span>
            <span class="hamburger-line"></span>
        </button>
    </div>

    <!-- Mobile Navigation Menu -->
    <nav class="mobile-navigation" id="mobile-navigation">
        <a class={`nav-button ${currentPath === '/' ? 'active' : ''}`} href="/">Curriculum</a>
        <a class={`nav-button ${currentPath === '/sobre-mi' ? 'active' : ''}`} href="/sobre-mi">Sobre mí</a>
        <a class={`nav-button ${currentPath === '/proyectos' ? 'active' : ''}`} href="/proyectos">Proyectos</a>
        <a class={`nav-button ${currentPath === '/blog' ? 'active' : ''}`} href="/blog">Blog</a>
    </nav>
</header>
